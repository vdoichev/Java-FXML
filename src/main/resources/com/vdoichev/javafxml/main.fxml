<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="420.0" minWidth="340.0" prefHeight="420.0" prefWidth="340.0"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vdoichev.javafxml.MainController">
    <children>
        <HBox fx:id="panel1" maxHeight="30.0" prefHeight="30.0">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#onShowDialog" text="Добавить">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="editButton" mnemonicParsing="false" text="Изменить ">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="deleteButton" mnemonicParsing="false" text="Удалить">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <AnchorPane fx:id="panel2" maxHeight="30.0" prefHeight="30.0">
            <children>
                <TextField fx:id="searchField" prefHeight="26.0" prefWidth="219.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="80.0"/>
                <Button fx:id="searchButton" layoutX="193.0" mnemonicParsing="false" text="Поиск" AnchorPane.rightAnchor="0.0"/>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
        </AnchorPane>
        <AnchorPane fx:id="panel3" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tableView" prefHeight="200.0" prefWidth="324.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="column1" prefWidth="183.0" text="ФИО"/>
                        <TableColumn fx:id="column2" minWidth="0.0" prefWidth="140.0" text="Телефон"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
        </AnchorPane>
        <AnchorPane fx:id="panel4">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
            <children>
                <Label fx:id="rowsCount" prefHeight="17.0" prefWidth="306.0" text="Количество записей" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
